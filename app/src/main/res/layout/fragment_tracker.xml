<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tracker.TrackerFragment">

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/group1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:translationX="-20dp"
            android:translationY="-132dp">

            <RadioButton
                android:id="@+id/rad_btn4"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:background="@drawable/v_button4"
                android:backgroundTintMode="add"
                android:button="@null"
                android:text="4"
                android:textSize="0sp" />

            <RadioButton
                android:id="@+id/rad_btn3"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:background="@drawable/v_button3"
                android:backgroundTintMode="add"
                android:button="@null"
                android:text="3"
                android:textSize="0sp" />

            <RadioButton
                android:id="@+id/rad_btn2"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:background="@drawable/v_button2"
                android:backgroundTintMode="add"
                android:button="@null"
                android:text="2"
                android:textSize="0sp" />

            <RadioButton
                android:id="@+id/rad_btn1"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:background="@drawable/v_button"
                android:backgroundTintMode="add"
                android:button="@null"
                android:checked="true"
                android:text="1"
                android:textSize="0sp" />
        </RadioGroup>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/v_switch"
            android:gravity="end|bottom"
            android:textOff="улк"
            android:textOn="гк"
            android:thumb="@null"
            android:track="@null"
            android:translationX="300dp"
            android:translationY="-325dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>