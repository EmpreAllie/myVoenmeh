<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".Activities.LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:translationY="58dp"
            app:srcCompat="@drawable/voenmeh_logo" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:gravity="center"
            android:translationY="287dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_m"
                android:text="Введите ваши логин и пароль от Moodle"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:translationY="1dp"
                app:srcCompat="@drawable/moodle_logo" />

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:translationY="335dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="330dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@drawable/corner_login"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat_m"
                android:hint="Логин"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="#9A9A9A"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/password"
                android:layout_width="330dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/corner_login"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat_m"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="#9A9A9A"
                android:textColorHighlight="@color/cardview_dark_background" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:gravity="center"
                android:translationY="3dp">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:checked="false"
                    android:button="@drawable/image_checkbox"
                    android:focusable="false"
                    android:theme="@style/colored_checkBox"
                    android:translationX="-8dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="294dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_r"
                    android:gravity="center"
                    android:text="Даю согласие на обработку персональных данных"
                    android:textSize="13sp"
                    android:translationX="3dp"
                    android:translationY="8dp" />

            </TableRow>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/blue_main"
                android:fontFamily="@font/montserrat_sb"
                android:text="Войти"
                android:textSize="20sp"
                android:translationY="-15dp"
                app:cornerRadius="15dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>