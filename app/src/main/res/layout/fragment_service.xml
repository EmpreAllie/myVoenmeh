<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.service.ServiceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_b"
            android:text="Сервисы"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:translationX="12.5dp"
            android:translationY="12.5dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:translationY="75dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="#234090"
                android:paddingLeft="14dp"
                android:text="@null"
                app:icon="@drawable/library_logo" />

            <Button
                android:id="@+id/button4"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="#234090"
                android:text="@null"
                app:icon="@drawable/uslugi_logo" />

            <Button
                android:id="@+id/button5"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="#234090"
                android:paddingLeft="14dp"
                android:text="@null"
                app:icon="@drawable/merch_logo" />

            <Button
                android:id="@+id/button6"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:backgroundTint="#234090"
                android:paddingLeft="14dp"
                android:text="@null"
                app:icon="@drawable/courses_logo" />

        </TableRow>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>